    "`--ignore=\"\\.*\"` removes paths like ./ ../"
  ],
  "cli": [
    "ls -RA --ignore=\"\\.*\" /misc/software/database/awx | awk '",
    "/:$/&&f{s=$0;f=0}",
    "/:$/&&!f{sub(/:$/,\"\");s=$0;f=1;next}",
    "NF&&f{ print s\"/\"$0 }'"
