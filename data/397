  "code": [
    "HEX_TEXT=68656c6c6f20776f726c64",
    "ASCII_TEXT=\"hello world\"",
    "",
    "# hex to ascii",
    "echo -n \"$HEX_TEXT\" | sed 's/\\([0-9A-F]\\{2\\}\\)/\\\\\\\\\\\\x\\1/gI' | xargs printf && echo ''",
    "",
    "# ascii to hex",
    "echo -n \"$ASCII_TEXT\" | od -A n -t x1 | tr -d ' '",
    ""
  ],
  "example": [
